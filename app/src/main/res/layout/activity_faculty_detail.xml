<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:id="@+id/initial"
                    android:background="@color/colorAccent"
                    android:paddingBottom="1sp">


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="175sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/facname"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="serif"
                                    android:gravity="center"
                                    android:text="TextView"
                                    android:textColor="#212121"
                                    android:textSize="20sp"
                                    android:transitionName="name_shared"/>

                                <TextView
                                    android:id="@+id/facdesignation"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignStart="@+id/facname"
                                    android:layout_below="@+id/facname"
                                    android:gravity="center"
                                    android:text="TextView"
                                    android:textSize="18sp"
                                    android:transitionName="designation_shared"/>


                            </LinearLayout>
                            <ImageView
                                android:id="@+id/facultydisicon"
                                android:layout_width="wrap_content"
                                android:layout_height="175sp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                app:srcCompat="@drawable/cs_vasudeva"
                                android:layout_weight = "0"
                                android:background="#9658"
                                android:layout_gravity="left"
                                android:transitionName="logo_shared"/>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/initial">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Educational Qualification :"
                                android:layout_span="3"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:id="@+id/a1"
                                android:fontFamily="serif"
                                android:textColor="@color/colorAccent"/>


                            <TextView
                                android:text=""
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/a1"
                                android:layout_weight="1"
                                android:id="@+id/EucationalQualification"
                                android:textColor="#292f33"
                                android:textSize="16sp"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:gravity="left|center"/>

                        </RelativeLayout>




                    </android.support.v7.widget.CardView>




                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a2"
                        android:layout_below="@+id/card_view_a1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Area of Specialization :"
                                android:layout_span="3"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:id="@+id/a2"
                                android:fontFamily="serif"
                                android:textColor="@color/colorAccent"/>

                            <TextView
                                android:text=""
                                android:layout_below="@+id/a2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/AreaOfSpecialization"
                                android:textColor="#292f33"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:textSize="16dp"
                                android:gravity="left"/>


                        </RelativeLayout>




                    </android.support.v7.widget.CardView>



                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a3"
                        android:layout_below="@+id/card_view_a2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/a3"
                                android:text="Experience :"
                                android:layout_span="3"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:fontFamily="serif"
                                android:textColor="@color/colorAccent"/>

                            <TextView
                                android:text=""
                                android:layout_below="@+id/a3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/Experience"
                                android:textColor="#292f33"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:textSize="16sp"
                                android:gravity="left"/>


                        </RelativeLayout>




                    </android.support.v7.widget.CardView>



                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a4"
                        android:layout_below="@+id/card_view_a3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/a4"
                                android:text="Memberships :"
                                android:layout_span="3"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:fontFamily="serif"
                                android:textColor="@color/colorAccent"/>

                            <TextView
                                android:text=""
                                android:layout_below="@+id/a4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/Memberships"
                                android:textColor="#292f33"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:textSize="16sp"
                                android:gravity="left"/>


                        </RelativeLayout>




                    </android.support.v7.widget.CardView>



                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a5"
                        android:layout_below="@+id/card_view_a4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/a5"
                                android:text="Awards / Fellowships / Achievements :"
                                android:layout_span="3"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:fontFamily="serif"
                                android:textColor="@color/colorAccent"/>

                            <TextView
                                android:text=""
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/a5"
                                android:layout_weight="1"
                                android:id="@+id/Awards"
                                android:textColor="#292f33"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:textSize="16sp"
                                android:gravity="left"/>


                        </RelativeLayout>




                    </android.support.v7.widget.CardView>



                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a6"
                        android:layout_below="@+id/card_view_a5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/a6"
                                android:text="Area Of Interest :"
                                android:layout_span="3"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:fontFamily="serif"
                                android:textColor="@color/colorAccent"/>

                            <TextView
                                android:text=""
                                android:layout_below="@+id/a6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/AreaOfInterest"
                                android:textColor="#292f33"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:textSize="16sp"
                                android:gravity="left"/>


                        </RelativeLayout>




                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a7"
                        android:layout_below="@+id/card_view_a6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/a7"
                                android:text="Publications :"
                                android:layout_span="3"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:fontFamily="serif"
                                android:textColor="@color/colorAccent"/>

                            <TextView
                                android:text=""
                                android:layout_below="@+id/a7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/Publications"
                                android:textColor="#292f33"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:textSize="16sp"
                                android:gravity="left"/>


                        </RelativeLayout>




                    </android.support.v7.widget.CardView>




                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a8"
                        android:layout_below="@+id/card_view_a7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/a8"
                                android:text="No. of PG and Ph.D. Theses guided :"
                                android:layout_span="3"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:fontFamily="serif"
                                android:textColor="@color/colorAccent"/>
                            <TextView
                                android:id="@+id/NoofPGPhDThesesguided"
                                android:layout_weight="1"
                                android:layout_below="@+id/a8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="#292f33"
                                android:textSize="16sp" />


                        </RelativeLayout>




                    </android.support.v7.widget.CardView>



                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a9"
                        android:layout_below="@+id/card_view_a8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/a9"
                                android:text="Contact Details :"
                                android:layout_span="3"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:fontFamily="serif"
                                android:textColor="@color/colorAccent"/>

                            <TextView
                                android:id="@+id/ContactDetails"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_below="@+id/a9"
                                android:gravity="left"
                                android:textSize="16sp"
                                android:paddingLeft="50dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="#292f33"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true" />


                        </RelativeLayout>




                    </android.support.v7.widget.CardView>



                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_a10"
                        android:layout_below="@+id/card_view_a9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10sp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:padding="25dip"
                                android:text="*Based on College Website"
                                android:textColor="#292f33" />


                        </RelativeLayout>




                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>




        </LinearLayout>


    </ScrollView>
</RelativeLayout>
